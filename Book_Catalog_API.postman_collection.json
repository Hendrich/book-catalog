            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"hendri.christianto24@gmail.com\",\n  \"password\": \"OQS4iqyWkAdBXgsS\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
